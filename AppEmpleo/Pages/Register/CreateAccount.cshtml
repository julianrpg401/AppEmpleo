@page
@model AppEmpleo.Pages.CreateAccount.CreateAccountModel

@{
    ViewData["BodyClass"] = "page-body page-body--pink";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/register-create-account.css" asp-append-version="true" />
}

<div class="auth register">
    <div class="card auth__card">
        <h2 class="auth__title">Create account</h2>
        <p class="auth__subtitle">Start applying to jobs in minutes</p>

        <form method="post" class="form">
            <div class="form-field">
                <label asp-for="NewUser.FirstName" class="form-field__label"></label>
                <input asp-for="NewUser.FirstName" type="text" class="form-field__input" />
                <span asp-validation-for="NewUser.FirstName" class="form-field__error"></span>
            </div>
            <div class="form-field">
                <label asp-for="NewUser.LastName" class="form-field__label"></label>
                <input asp-for="NewUser.LastName" type="text" class="form-field__input" />
                <span asp-validation-for="NewUser.LastName" class="form-field__error"></span>
            </div>
            <div class="form-field">
                <label asp-for="NewUser.Email" class="form-field__label"></label>
                <input asp-for="NewUser.Email" type="email" class="form-field__input" />
                <span asp-validation-for="NewUser.Email" class="form-field__error"></span>
            </div>
            <div class="form-field">
                <label asp-for="NewUser.BirthDate" class="form-field__label"></label>
                <input asp-for="NewUser.BirthDate" type="date" class="form-field__input" />
                <span asp-validation-for="NewUser.BirthDate" class="form-field__error"></span>
            </div>
            <div class="form-field">
                <label asp-for="NewUser.PasswordHash" class="form-field__label"></label>
                <input asp-for="NewUser.PasswordHash" type="password" class="form-field__input" />
                <span asp-validation-for="NewUser.PasswordHash" class="form-field__error"></span>
            </div>

            <div class="form-field">
                <label class="form-field__label">Role</label>
                <label class="form-field__hint"><input asp-for="NewUser.Role" type="radio" value="candidato" checked /> Candidate</label>
                <label class="form-field__hint"><input asp-for="NewUser.Role" type="radio" value="reclutador" /> Recruiter</label>
            </div>

            <button type="submit" class="btn btn--block">Create account</button>
            <p class="form-field__hint">Already have an account? <a class="guest-header__link" asp-page="/Login/Login">Sign in</a></p>
        </form>
    </div>
</div>
