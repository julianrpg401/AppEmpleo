@page
@model AppEmpleo.Pages.CreateAccount.CreateAccountModel

@{
    ViewData["BodyClass"] = "bg__pink"; // Define la clase del fondo
}

<div class="default__form">
    <form method="post" asp-page="Register" class="form">

        <div class="form__group">
            <label asp-for="User.Nombre" class="label"></label>
            <input asp-for="User.Nombre" type="text" value="" class="form__input" />
            <span asp-validation-for="User.Nombre" class="text__danger"></span>
        </div>
        <div class="form__group">
            <label asp-for="User.Apellido" class="label"></label>
            <input asp-for="User.Apellido" type="text" value="" class="form__input" />
            <span asp-validation-for="User.Apellido" class="text__danger"></span>
        </div>
        <div class="form__group">
            <label asp-for="User.Email" class="label"></label>
            <input asp-for="User.Email" type="email" value="" class="form__input" />
            <span asp-validation-for="User.Email" class="text__danger"></span>
        </div>
        <div class="form__group">
            <label asp-for="User.FechaNacimiento" class="label"></label>
            <input asp-for="User.FechaNacimiento" type="date" value="" class="form__input" />
            <span asp-validation-for="User.FechaNacimiento" class="text__danger"></span>
        </div>
        <div class="form__group">
            <label asp-for="User.ClaveHash" class="label"></label>
            <input asp-for="User.ClaveHash" type="password" value="" class="form__input" />
            <span asp-validation-for="User.ClaveHash" class="text__danger"></span>
        </div>
        <div class="form__group">
            <label for="Rol" class="label">Rol</label>
            <div class="form__group--radio">
                <div class="radio__button">
                    <label asp-for="User.Rol" class="label label__radio">Candidato</label>
                    <input asp-for="User.Rol" type="radio" value="candidato" class="input__radio" id="candidato" checked />
                </div>
                <div class="radio__button">
                    <label asp-for="User.Rol" class="label label__radio">Reclutador</label>
                    <input asp-for="User.Rol" type="radio" value="reclutador" class="input__radio" id="reclutador" />
                </div>
            </div>
        </div>

        <button type="submit" class="button button__submit">Crear Cuenta</button>
        <p class="form__text">¿Ya tienes una cuenta?<br /><a class="text__link" asp-page="/Login/Login">Inicia sesión</a></p>
        
    </form>
</div>
