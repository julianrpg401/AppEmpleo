@page
@model AppEmpleo.Pages.Register.RegisterModel
@{
    Layout = "~/Pages/Shared/_AltLayout.cshtml";
}

<div class="container">
    <form action="/" method="post">
        <div class="form-group">
            <label asp-for="Usuario.NombreUsuario" class="control-label"></label>
            <input asp-for="Usuario.NombreUsuario" class="form-control" />
            <span asp-validation-for="Usuario.NombreUsuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Usuario.EmailUsuario" class="control-label"></label>
            <input asp-for="Usuario.EmailUsuario" class="form-control" />
            <span asp-validation-for="Usuario.EmailUsuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Usuario.ClaveUsuario" class="control-label"></label>
            <input asp-for="Usuario.ClaveUsuario" class="form-control" />
            <span asp-validation-for="Usuario.ClaveUsuario" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Crear Cuenta</button>
    
    </form>
</div>
