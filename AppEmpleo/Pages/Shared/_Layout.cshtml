<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JobTI</title>
    <meta name="description" content="">
    <meta name="keywords" content="">

    <!-- Favicons -->
    <link href="~/assetsLandingPage/img/favicon.png" rel="icon">
    <link href="~/assetsLandingPage/img/apple-touch-icon.png" rel="apple-touch-icon">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:opsz,wght@14..32,400..900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer">

    <!-- CSS (base + layout) -->
    <link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layouts/guest.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="@ViewData["BodyClass"]">
    <div class="bg-layer" aria-hidden="true">
        <canvas class="bg-waves" data-bg-waves></canvas>
    </div>
    <header class="guest-header">
        <div class="guest-header__container">
            <a asp-page="/Index" class="guest-header__brand">
                <h1 class="guest-header__brand-title">JobTI</h1>
            </a>

            <button type="button" class="guest-header__nav-toggle" id="guestNavToggle" aria-label="Abrir menú">
                <i class="bi bi-list" aria-hidden="true"></i>
            </button>

            <nav class="guest-header__nav" aria-label="Navegación principal">
                <a class="guest-header__link" asp-page="/Index">Inicio</a>
                <a class="guest-header__link" href="#">Candidatos</a>
                <a class="guest-header__link" href="#">Reclutadores</a>
                <a class="guest-header__link" href="#">Ayuda</a>
                <a asp-page="/Login/Login" class="btn btn--ghost" title="Iniciar sesión">Iniciar sesión</a>
                <a asp-page="/Register/CreateAccount" class="btn btn-create__account" title="Crear cuenta">Crear cuenta</a>
            </nav>
        </div>
    </header>

    <main class="guest-main" role="main">
        @RenderBody()
    </main>

    <footer class="guest-footer" aria-label="Footer">
        <div class="guest-footer__container">
            <div class="guest-footer__brand">
                <div class="guest-footer__brand-title">JobTI</div>
                <div class="guest-footer__brand-text">Tu próxima oportunidad en tecnología, más cerca de lo que imaginas.</div>
            </div>

            <div class="guest-footer__links">
                <a class="guest-footer__link" asp-page="/Index">Inicio</a>
                <a class="guest-footer__link" asp-page="/Privacy">Privacidad</a>
                <a class="guest-footer__link" href="#">Soporte</a>
            </div>

            <div class="guest-footer__meta">
                <span class="guest-footer__meta-text">© @DateTime.Now.Year JobTI</span>
            </div>
        </div>
    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <script src="~/js/layouts/background.js" asp-append-version="true"></script>
    <script src="~/js/styles.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
