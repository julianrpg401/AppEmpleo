@inject IClaimsService claimsService
@using AppEmpleo.Interfaces.Services.SessionServices
@{
    var userName = claimsService.GetName();
    var userRole = claimsService.GetRole();
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppEmpleo</title>

    <!-- Favicons -->
    <link href="~/assetsLandingPage/img/favicon.png" rel="icon">
    <link href="~/assetsLandingPage/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:opsz,wght@14..32,400..900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" rel="stylesheet">

    <!-- CSS (base + layout) -->
    <link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layouts/session.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="app-shell" data-shell>
    <div class="bg-layer" aria-hidden="true">
        <canvas class="bg-waves" data-bg-waves></canvas>
    </div>
    <aside class="app-sidebar" aria-label="Barra lateral">
        <nav class="app-sidebar__nav">
            <div class="app-sidebar__profile">
                <img src="~/img/logo.png" alt="Logo" class="app-sidebar__avatar" />
                <div class="app-sidebar__profile-text">
                    <span class="app-sidebar__profile-name">@userName</span>
                    <span class="app-sidebar__profile-role">@userRole</span>
                </div>
            </div>
            <button type="button" id="sidebarToggle" aria-label="Alternar menú">
                <i class='bx bx-chevron-right toggle'></i>
            </button>

            <div class="app-sidebar__search" role="search">
                <i class='bx bx-search'></i>
                <input type="search" class="app-sidebar__search-input" placeholder="Buscar..." />
            </div>

            <ul class="app-sidebar__menu">
                <li class="app-sidebar__menu-item">
                    <a asp-page="/Application/Home" class="app-sidebar__menu-link">
                        <i class='bx bx-home-alt'></i>
                        <span class="app-sidebar__menu-text">Home</span>
                    </a>
                </li>
                <li class="app-sidebar__menu-item">
                    <a asp-page="/Application/Home" class="app-sidebar__menu-link">
                        <i class='bx bx-briefcase'></i>
                        <span class="app-sidebar__menu-text">Jobs</span>
                    </a>
                </li>
                <li class="app-sidebar__menu-item">
                    <a asp-page="/Application/Evaluations" class="app-sidebar__menu-link">
                        <i class='bx bx-spreadsheet'></i>
                        <span class="app-sidebar__menu-text">Evaluations</span>
                    </a>
                </li>
                <li class="app-sidebar__menu-item">
                    <a href="#" class="app-sidebar__menu-link">
                        <i class='bx bx-bell'></i>
                        <span class="app-sidebar__menu-text">Notifications</span>
                    </a>
                </li>
                <li class="app-sidebar__menu-item">
                    <a href="#" class="app-sidebar__menu-link">
                        <i class='bx bx-slider-alt'></i>
                        <span class="app-sidebar__menu-text">Settings</span>
                    </a>
                </li>
            </ul>

            <div class="app-sidebar__footer">
                <form asp-page="/Index">
                    <button type="submit" class="btn btn--ghost app-sidebar__logout">
                        <i class='bx bx-log-out'></i>
                        <span class="app-sidebar__menu-text">Sign out</span>
                    </button>
                </form>
            </div>
        </nav>
    </aside>

    <div class="app-main">
        <main role="main" class="app-main__content">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>

    <script src="~/js/layout.js" asp-append-version="true"></script>
    <script src="~/js/background.js" asp-append-version="true"></script>
    <script src="~/js/styles.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
