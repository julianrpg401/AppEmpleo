@inject IClaimsService claimsService
@using AppEmpleo.Interfaces.Services.SessionServices
@{
    var userName = claimsService.GetName();
    var userRole = claimsService.GetRole();
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppEmpleo</title>

    <!-- Favicons -->
    <link href="~/assetsLandingPage/img/favicon.png" rel="icon">
    <link href="~/assetsLandingPage/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:opsz,wght@14..32,400..900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" rel="stylesheet">

    <!-- CSS (base + layout) -->
    <link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layouts/session.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layouts/layout.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="session-layout" data-shell>

    <nav class="sidebar close">

        @*Encabezado*@
        <header>
            <div class="image-text">
                <span class="image-text__span">
                    <img src="~/img/logo.png" alt="logo" />
                </span>
                <div class="text header-text">
                    <span class="name">@userName</span>
                    <span class="role">@userRole</span>
                </div>
            </div>
            <i class="bx bx-chevron-right toggle"></i>
        </header>

        @*Menú de navegación*@
        <div class="menu-bar">
            <div class="menu">
                <ul class="menu-links">
                    <li class="nav-link">
                        <a asp-page="/Application/Home" class="link">
                            <i class='bx bx-home-alt icon' aria-hidden="true"></i>
                            <span class="text nav-text">Inicio</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a href="#" class="link">
                            <i class='bx bx-briefcase icon' aria-hidden="true"></i>
                            <span class="text nav-text">Inicio</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a asp-page="/Application/Evaluations" class="link">
                            <i class='bx bx-spreadsheet icon' aria-hidden="true"></i>
                            <span class="text nav-text">Evaluaciones</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a href="#" class="link">
                            <i class='bx bx-bell icon' aria-hidden="true"></i>
                            <span class="text nav-text">Notificaciones</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a href="#" class="link">
                            <i class='bx bx-slider-alt icon' aria-hidden="true"></i>
                            <span class="text nav-text">Ajustes</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        @*Cerrar sesión*@
        <div class="bottom-content">
            <form asp-page="/Index" class="nav-link nav-link__bottom">
                <button type="submit" class="link link-bottom">
                    <i class='bx bx-log-out icon' id="log-out-icon" aria-hidden="true"></i>
                    <span class="sidebar__menu-text" id="log-out-text">Cerrar sesión</span>
                </button>
            </form>
        </div>

    </nav>

    <div class="main">
        <main role="main" class="main__content">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>

    <script src="~/js/layouts/sidebar.js" asp-append-version="true"></script>
    <script src="~/js/layouts/background.js" asp-append-version="true"></script>
    <script src="~/js/styles.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
