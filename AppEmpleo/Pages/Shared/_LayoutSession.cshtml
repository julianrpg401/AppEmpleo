@inject ClaimsService claimsService
@using AppEmpleo.Class.Services
@using AppEmpleo.Models

@{
    var authenticatedUser = claimsService.AuthenticatedUser();

    if (!authenticatedUser)
    {
        throw new ArgumentException();
    }

    Usuario user = new Usuario()
    {
        Nombre = claimsService.GetName(),
        Email = claimsService.GetEmail(),
        Rol = claimsService.GetRole()
    };
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppEmpleo</title>

    <!-- Favicons -->
    <link href="~/assetsLandingPage/img/favicon.png" rel="icon">
    <link href="~/assetsLandingPage/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" rel="stylesheet">

    <!-- CSS -->
    <link href="~/css/layout.css" rel="stylesheet" />
    <link href="~/css/forms.css" rel="stylesheet" />
    <link href="~/css/home.css" rel="stylesheet" />
</head>
<body>
    <header class="cabeza close">
        <nav class="cabeza__menu">
            <div class="menu__perfil">
                <picture class="perfil__caja">
                    <source media="(min-width: 465px)" srcset="~/img/logo.png" class="caja__avatar" />
                    <source media="(min-width: 650px)" srcset="~/img/logo.png" class="caja__avatar" />
                    <img src="~/img/logo.png" alt="perfil.png" class="caja__avatar" />
                </picture>
                <div class="perfil__texto perfil__texto--color">
                    <span class="perfil__nombre">@user.Nombre</span>
                    <span class="perfil__profesion">Desarrollador web</span>
                </div>
            </div>
            <i class='bx bx-chevron-right toggle' id="arrow"></i>
            <div class="menu">
                <div class="menu__buscador">
                    <i class='bx bx-search buscador__icon icon'></i>
                    <input type="search" name="name" class="buscador" placeholder="Buscar..." />
                </div>
                <ul class="menu__lista">
                    <li class="lista__opcion">
                        <a href="" class="opcion__link">
                            <i class='bx bx-home-alt link__icon icon'></i>
                            <span class="link__texto">Inicio</span>
                        </a>
                    </li>
                    <li class="lista__opcion">
                        <a href="" class="opcion__link">
                            <i class='bx bx-briefcase link__icon icon'></i>
                            <span class="link__texto">Empleo</span>
                        </a>
                    </li>
                    <li class="lista__opcion">
                        <a href="" class="opcion__link">
                            <i class='bx bx-spreadsheet link__icon icon'></i>
                            <span class="link__texto">Evaluaciones</span>
                        </a>
                    </li>
                    <li class="lista__opcion">
                        <a href="" class="opcion__link">
                            <i class='bx bx-bell link__icon icon'></i>
                            <span class="link__texto">Notificaciones</span>
                        </a>
                    </li>
                    <li class="lista__opcion">
                        <a href="" class="opcion__link">
                            <i class='bx bx-slider-alt link__icon icon'></i>
                            <span class="link__texto">Configuracion</span>
                        </a>
                    </li>
                </ul>
                <div class="menu__boton">
                    <div class="boton__salir">
                        <a href="#" class="salir__link">
                            <i class="bx bx-log-out boton__icon icon"></i>
                            <span class="salir__texto">Cerrar sesión</span>
                        </a>
                    </div>
                    <div class="boton__modo">
                        <i class="bx bx-moon boton__icon boton__icon--modo icon"></i>
                        <i class="bx bx-sun boton__icon boton__icon--modo icon"></i>
                        <span class="modo__texto">Modo oscuro</span>
                        <div class="modo__switch">
                            <span class="switch"></span>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>

    <!-- StylesJS -->
    <script src="~/js/layout.js"></script>
    <script src="~/js/styles.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
