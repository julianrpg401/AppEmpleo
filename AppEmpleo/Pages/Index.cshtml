@page
@model IndexModel
@{
    ViewData["Title"] = "Index";
	ViewData["BodyClass"] = "bg__white"; // Define la clase del fondo
}

<!-- Hero section -->
<section id="hero" class="hero">
	<div class="hero__container">
		<div class="container__text">
			<h1 class="text__title">Encuentra el empleo que siempre soñaste</h1>
			<p class="text__paragraph">Unete a la mejor plataforma de empleo para TI de Latinoamérica</p>
		</div>
		<div class="container__img">
			<img src="~/assetsLandingPage/img/hero-img.png" alt="hero-img" class="img">
		</div>
	</div>
	<a asp-page="/Register/CreateAccount" type="button" title="Iniciar sesión" class="button button__register" id="button__register--index">
		Regístrate
	</a>
</section>
