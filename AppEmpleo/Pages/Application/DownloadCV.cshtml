@page
@model AppEmpleo.Pages.Application.DownloadCVModel
@{
    ViewData["Title"] = "Descargar CV";
    Layout = "~/Pages/Shared/_LayoutSession.cshtml";
}

<div class="container mx-auto p-4">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
            <div class="bg-red-100 text-red-800 p-3 rounded">
            @Model.ErrorMessage
            </div>
            <a asp-page="/Application/Home" class="text-blue-600 hover:underline">Volver al listado</a>
    }
    else
    {
            <div class="bg-green-100 text-green-800 p-3 rounded">
                Si la descarga no comenzó automáticamente, <a asp-page="./DownloadCV" asp-route-curriculumId="@Model.CurriculumId">haz clic aquí</a>.
            </div>
    }
</div>